<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.inventory.controller.DashboardController">

    <top>
        <ToolBar>
            <Label text="Smart Inventory Dashboard"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <children>
                <Button text="Manage Products"
                        onAction="#onManageProducts"
                        prefWidth="200" />
                <Button text="Manage Suppliers"
                        onAction="#onManageSuppliers"
                        prefWidth="200"/>
                <Button text="Manage Transactions"
                        onAction="#onManageTransactions"
                        prefWidth="200"/>
                <!-- âœ… NEW REPORT BUTTON -->
                <Button text="Reports"
                        onAction="#onManageReports"
                        prefWidth="200"/>
            </children>
        </VBox>
    </center>

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</BorderPane>
