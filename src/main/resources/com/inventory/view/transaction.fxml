<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.inventory.controller.TransactionController"
      spacing="10">

    <!-- Add padding using Insets -->
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Header with Title + Back Button -->
    <HBox spacing="10">
        <Label text="Manage Transactions"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Pane HBox.hgrow="ALWAYS"/> <!-- pushes Back button to right -->
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Product:"/>
        <ComboBox fx:id="productComboBox" prefWidth="200"/>

        <Label text="Quantity:"/>
        <TextField fx:id="quantityField" prefWidth="100"/>

        <Label text="Type:"/>
        <ComboBox fx:id="typeComboBox" prefWidth="150"/>

        <Label text="Date:"/>
        <DatePicker fx:id="datePicker" prefWidth="150"/>

        <Button text="Add Transaction" onAction="#handleAddTransaction"/>
    </HBox>

    <TableView fx:id="transactionTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colProduct" text="Product" prefWidth="200"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="150"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
