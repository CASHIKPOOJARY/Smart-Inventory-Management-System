<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.inventory.controller.LoginController">
    <center>
        <VBox spacing="12" alignment="CENTER">
            <children>
                <Label text="Smart Inventory - Login" />
                <TextField fx:id="usernameField" promptText="Username" maxWidth="240"/>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="240"/>
                <Button text="Login" onAction="#handleLogin" maxWidth="240"/>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
